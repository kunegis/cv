#! /bin/sh

sed -E -e '
	s,^\\citation\{(.+)\},\1,;t;d 
' |
nl - |
sed -E -e '
	s,^\s*([0-9]+)\s+(\S+)$,\\newcommand\{\\cite\2\}\{\[\1\]\},
	s,[-:_],,g
	s,1(.*)\[,A\1[,g
	s,2(.*)\[,B\1[,g
	s,3(.*)\[,C\1[,g
	s,4(.*)\[,D\1[,g
	s,5(.*)\[,E\1[,g
	s,6(.*)\[,F\1[,g
	s,7(.*)\[,G\1[,g
	s,8(.*)\[,H\1[,g
	s,9(.*)\[,I\1[,g
	s,0(.*)\[,J\1[,g
'
